<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="topbar">
            <img src="/assets/images/burger.png" alt="burger" />
            <h1>Eat-Da-Burger!</h1>
        </div>

        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                        <div class="col-md-9 text-center">
                            <pre>{{this.id}}.{{this.burger_name}}</pre>
                        </div>
                        <div class="col-md-3 text-center">
                            <form class="devour-form button-size" action="/burgers/{{this.id}}?_method=PUT" method="POST">
                                <button type="submit" class="btn btn-primary">Devour It!</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-md-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <div class='burgerEaten'>
                        <div>
                        {{this.burger_name}}
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/burgers" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text" placeholder="Uber Delicious Burger">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a burger you want to eat & Click the submit button</p>
        </div>
    </div>
</div>